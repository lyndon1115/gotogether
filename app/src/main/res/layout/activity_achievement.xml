<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/include_title_achievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title_achievement" />

    <include

        android:id="@+id/include_detail_achievement"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_title_achievement"
        layout="@layout/detail_achievenment"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/include_detail_achievement"
        android:background="@drawable/shape_rec"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/share"

            android:layout_marginTop="7dp"
            android:padding="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"


            android:layout_below="@id/include_detail_achievement"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/white"

            android:padding="5dp"

            android:text="分享"
            style="@style/textStyle"/>

    </LinearLayout>




</RelativeLayout>
